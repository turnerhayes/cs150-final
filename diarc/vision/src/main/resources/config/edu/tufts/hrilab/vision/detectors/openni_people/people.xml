    </descriptor>
    <descriptor name="person">
      <enum>1</enum>
      <enum>2</enum>
      <enum>3</enum>
      <enum>4</enum>
      <enum>6</enum>
      <enum>7</enum>
      <enum>8</enum>
      <enum>9</enum>
      <enum>10</enum>
      <enum>12</enum>
      <enum>13</enum>
      <enum>14</enum>
      <enum>15</enum>
      <enum>16</enum>
      <enum>17</enum>
      <enum>18</enum>
      <enum>20</enum>
      <enum>21</enum>
      <enum>22</enum>
      <enum>24</enum>
    </descriptor>
  </predicate>
</processor>

