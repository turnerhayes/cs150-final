      <enum>13</enum>
    </descriptor>
    <descriptor name="wrist">
      <enum>8</enum>
      <enum>14</enum>
    </descriptor>
    <descriptor name="hand">
      <enum>9</enum>
      <enum>15</enum>
    </descriptor>
    <descriptor name="fingertip">
      <enum>10</enum>
      <enum>16</enum>
    </descriptor>
    <descriptor name="hip">
